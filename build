#!/usr/bin/env bash

shopt -s globstar

for md in **/*.md; do
  dir=$(dirname $md)
  filename=$(basename $md)
  echo "building ${md}"

  assets_folder="assets"

  if [[ ${dir} != "."  ]]; then
    assets_folder="../assets"
  fi

  pandoc -s "${md}" -o "${dir}"/index.html --template assets/template.html \
    --variable styles_file="${assets_folder}/styles.css"
done

